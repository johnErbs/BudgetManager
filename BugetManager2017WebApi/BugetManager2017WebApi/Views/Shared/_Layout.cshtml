<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Budgetmanager", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    @*@Html.ActionLink("Budget", "index", "Home/BudgetCreator", new { area = "" }, null)*@
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Budget <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Bugetoversigt", "index", "Home/BudgetIndex", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("Opret budget", "index", "Home/CreateBugetTemplate", new { area = "" }, null)</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Opret virksomhed", "index", "Home/CreateOrganization", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        </div>
        <footer class="footer navbar-fixed-bottom">
            <div class="row">
                <div class="col-md-4">
                    <p>Datamatiker 3. Semester [Systemudvikling, Programmering, Sikkerhed, Teknologi]</p>
                    <hr />
                </div>
                <div class="col-md-4">
                </div>
                <div class="col-md-4">
                    <p>Developed by: Ahmad, Kaj, Chris, Johnny</p>
                    <p>&copy; @DateTime.Now.Year - TeamCancer:</p>
                    <hr />
                </div>
            </div>
        </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
